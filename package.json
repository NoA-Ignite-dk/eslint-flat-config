{
	"name": "@noaignite-dk/eslint-flat-config",
	"type": "module",
	"version": "3.0.0-beta.1",
	"packageManager": "pnpm@8.10.2",
	"description": "ESLint flat config for NoA Ignite projects",
	"author": "Joshuas Nielsen <jdpnielsen@gmail.com> (https://github.com/jdpnielsen/)",
	"license": "MIT",
	"homepage": "https://github.com/NoA-Ignite-dk",
	"repository": {
		"url": "https://github.com/NoA-Ignite-dk/eslint-flat-config"
	},
	"keywords": [
		"eslint-config"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --clean --dts",
		"stub": "tsup src/index.ts --format esm",
		"dev": "tsup src/index.ts --format esm,cjs --watch & npx @eslint/config-inspector",
		"lint": "pnpm run stub && eslint .",
		"prepack": "nr build",
		"release": "bumpp && pnpm publish",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"peerDependencies": {
		"eslint": ">=9.0.0"
	},
	"dependencies": {
		"@antfu/eslint-config": "^6.3.0",
		"@antfu/eslint-define-config": "1.23.0-2",
		"@eslint-react/eslint-plugin": "^2.3.12",
		"@next/eslint-plugin-next": "^15.5.7",
		"@typescript-eslint/eslint-plugin": "^8.48.1",
		"@typescript-eslint/parser": "^8.48.1",
		"eslint-plugin-react": "^7.37.5",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-react-refresh": "^0.4.24",
		"get-tsconfig": "^4.13.0",
		"local-pkg": "^1.1.2",
		"typescript-eslint": "^8.48.1"
	},
	"devDependencies": {
		"@antfu/ni": "^27.0.1",
		"@eslint/compat": "^2.0.0",
		"@eslint/config-inspector": "^1.4.2",
		"@noaignite-dk/eslint-flat-config": "workspace:*",
		"@stylistic/eslint-plugin-migrate": "^4.4.1",
		"@types/eslint": "^9.6.1",
		"@types/node": "^20.19.25",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"bumpp": "^9.11.1",
		"eslint": "^9.39.1",
		"eslint-plugin-format": "^1.0.2",
		"globals": "^15.15.0",
		"jiti": "2.6.1",
		"lint-staged": "^15.5.2",
		"react": "^19.2.1",
		"react-dom": "^19.2.1",
		"rimraf": "^5.0.10",
		"simple-git-hooks": "^2.13.1",
		"sucrase": "^3.35.1",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"unbuild": "^2.0.0",
		"vitest": "^3.2.4"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "eslint --fix"
	}
}
