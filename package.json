{
	"name": "@noaignite-dk/eslint-flat-config",
	"type": "module",
	"version": "1.1.0",
	"packageManager": "pnpm@8.10.2",
	"description": "ESLint flat config for NoA Ignite projects",
	"author": "Joshuas Nielsen <jdpnielsen@gmail.com> (https://github.com/jdpnielsen/)",
	"license": "MIT",
	"homepage": "https://github.com/NoA-Ignite-dk",
	"repository": {
		"url": "https://github.com/NoA-Ignite-dk/eslint-flat-config"
	},
	"keywords": [
		"eslint-config"
	],
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup src/index.ts --format esm,cjs --clean --dts",
		"stub": "tsup src/index.ts --format esm",
		"dev": "tsup src/index.ts --format esm,cjs --watch & eslint-flat-config-viewer",
		"lint": "pnpm run stub && eslint .",
		"prepack": "nr build",
		"release": "bumpp && pnpm publish",
		"test": "vitest",
		"typecheck": "tsc --noEmit",
		"prepare": "simple-git-hooks"
	},
	"peerDependencies": {
		"eslint": ">=8.0.0"
	},
	"dependencies": {
		"@antfu/eslint-config": "^3.11.2",
		"@antfu/eslint-define-config": "1.23.0-2",
		"@eslint-react/eslint-plugin": "^1.19.0",
		"@next/eslint-plugin-next": "^14.2.20",
		"@typescript-eslint/eslint-plugin": "^8.18.0",
		"@typescript-eslint/parser": "^8.18.0",
		"eslint-plugin-react": "^7.37.2",
		"eslint-plugin-react-hooks": "5.1.0",
		"eslint-plugin-react-refresh": "^0.4.16",
		"get-tsconfig": "^4.8.1",
		"local-pkg": "^0.5.1"
	},
	"devDependencies": {
		"@antfu/ni": "^0.21.12",
		"@eslint-react/eslint-plugin": "^1.5.16",
		"@eslint/compat": "^1.2.4",
		"@noaignite-dk/eslint-flat-config": "workspace:*",
		"@stylistic/eslint-plugin-migrate": "^1.8.1",
		"@types/eslint": "^8.56.12",
		"@types/fs-extra": "^11.0.4",
		"@types/node": "^20.17.10",
		"@types/react": "^19.0.1",
		"@types/react-dom": "^19.0.2",
		"bumpp": "^9.9.0",
		"eslint": "^9.16.0",
		"eslint-flat-config-viewer": "^0.1.20",
		"eslint-ts-patch": "9.5.0-0",
		"fast-glob": "^3.3.2",
		"fs-extra": "^11.2.0",
		"globals": "^15.13.0",
		"lint-staged": "^15.2.11",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"rimraf": "^5.0.10",
		"simple-git-hooks": "^2.11.1",
		"sucrase": "^3.35.0",
		"tsup": "^8.3.5",
		"typescript": "^5.7.2",
		"unbuild": "^2.0.0",
		"vitest": "^1.6.0"
	},
	"resolutions": {
		"@eslint-community/eslint-utils": "^4.4.0",
		"@typescript-eslint/utils": "^8.6.0",
		"eslint": "^9.10.0",
		"eslint-plugin-react-hooks": "5.1.0-rc-e4953922-20240919"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm lint-staged"
	},
	"lint-staged": {
		"*": "eslint --fix"
	}
}
